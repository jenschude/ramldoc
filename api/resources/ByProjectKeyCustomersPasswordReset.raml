# Resource
(resourceName): ByProjectKeyCustomersPasswordReset
(resourcePathUri): /{projectKey}/customers/password/reset
displayName: Reset Customer's Password

uriParameters:
  projectKey:
    type: string
    (builtinType): string
post:
  securedBy:
  - oauth_2_0:
      scopes:
      - "manage_project:{projectKey}"
      - "manage_customers:{projectKey}"
  description: |-
    Set a new password using a token.
  body:
    application/json:
      type: CustomerResetPassword
      (builtinType): object
  responses:
    200:
      body:
        application/json:
          type: Customer
          (builtinType): object