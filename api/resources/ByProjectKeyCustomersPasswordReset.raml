#ByProjectKeyCustomersPasswordReset
(resourcePathUri): /{projectKey}/customers/password/reset

uriParameters:
  projectKey:
    type: string
post:
  securedBy:
  - oauth_2_0:
      scopes:
      - "manage_project:{projectKey}"
      - "manage_customers:{projectKey}"
  description: |-
    Set a new password using a token.
  body:
    application/json:
      type: CustomerResetPassword
  responses:
    200:
      body:
        application/json:
          type: Customer