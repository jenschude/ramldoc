#%RAML 1.0 DataType
type: object
(originalType): object
displayName: ProductDraft


properties:
  searchKeywords:
    type: SearchKeywords
  description:
    type: LocalizedString
  variants:
    description: |-
      An array of related product variants.
    type: array
    items:
      type: ProductVariantDraft
  metaDescription:
    type: LocalizedString
  taxCategory:
    type: TaxCategoryResourceIdentifier
  metaKeywords:
    type: LocalizedString
  categoryOrderHints:
    type: CategoryOrderHints
  publish:
    description: |-
      If `true`, the product is published immediately.
    type: boolean
  metaTitle:
    type: LocalizedString
  name:
    type: LocalizedString
  state:
    type: StateResourceIdentifier
  masterVariant:
    description: |-
      The master product variant.
      Required if the `variants` array has product variants.
    type: ProductVariantDraft
  categories:
    description: |-
      Categories assigned to the product.
    type: array
    items:
      type: CategoryResourceIdentifier
  key:
    description: |-
      User-specific unique identifier for the product.
    type: string
  slug:
    description: |-
      Human-readable identifiers usually used as deep-link URLs for the product.
      A slug must be unique across a project, but a product can have the same slug for different languages.
      Slugs have a maximum size of 256.
      Valid characters are: alphabetic characters (`A-Z, a-z`), numeric characters (`0-9`), underscores (`_`) and hyphens (`-`).
    type: LocalizedString
  productType:
    description: |-
      A predefined product type assigned to the product.
      All products must have a product type.
    discriminatorValue: product-type
    type: ProductTypeResourceIdentifier